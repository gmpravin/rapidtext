        </svg>
        <div class="nav">
            <div class="logo">
                <li class="nav-logo"><a href="">LOGO</a></li>
            </div>
            <div class="nav-con">

                <% if (locals.user) { %>
                <li class="nav-items " style="color:white"><%= user %> </li>
                <% } %>
                <% if (locals.data) { %>
                <li class="nav-items"><a href="/logout">Logout</a></li>
                <% } %>
                <li class="nav-items"><a href="/dashboard">Dashboard</a></li>

                <div class="dropdown">
                    <button id="dropbtn">Product</button>
                    <div class="dropdown-content">
                        <a href="/sms">SMS client</a>
                        <a href="/bulksms">Bulk SMS sender</a>

                    </div>
                </div>
            </div>
    </header>
    <div class="container">

        <div class="sms">
            <form action="/sms" method="post">
                <p class="tl">Multi purpose sms client</p>
                <div class="fields">


                    <input type="text" name="from" id="from" placeholder="From">


                    <input type="tel" name="to" id="to" placeholder="To">
                    <textarea type="text" name="bodyMessage" id="smsBox" cols="3" placeholder="Message"></textarea>

                    <button type="submit">Send message</button>
                </div>
            </form>
            <% if (locals.errors) { %>
            <div class="error" id="error" style="width: 500px">

                <p class="delete" onclick="<%= del %>">x</p>
                <ul>
                    <% Object.values(errors).forEach(function(error){ %>
                    <li><%= error.msg %></li>
                    <% }); %>

                </ul>
            </div>
            <% } %>
            <% if ( locals.expressFlash.length > 0 ) { %>
            <p><strong>FLASH!</strong> <%= expressFlash %></p>
            <% } %>
        </div>
    </div>
    <%- include('../include/footer'); -%>
</body>
